<odoo>
    <!-- Tree/List View -->
    <record id="view_restaurant_reservation_tree" model="ir.ui.view">
        <field name="name">rsm.reservation.tree</field>
        <field name="model">rsm.reservation</field>
        <field name="arch" type="xml">
            <list>
                <field name="customer_id"/>
                <field name="table_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_restaurant_reservation_form" model="ir.ui.view">
        <field name="name">rsm.reservation.form</field>
        <field name="model">rsm.reservation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary" />

                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" />

                    <button name="action_done" type="object" string="Done" class="btn-success" />
                    <button name="action_create_order" type="object" string="Create Order" class="btn-danger" />

                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="table_id"/>
                            <field name="state" invisible="1"/>
                        </group>
                        <group>
                            <field name="start_time"/>
                            <field name="end_time"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_restaurant_reservation" model="ir.actions.act_window">
        <field name="name">Reservations</field>
        <field name="res_model">rsm.reservation</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="restaurant_reservation_menu" name="Reservations" parent="restaurant_management.restaurant_root_menu" action="action_restaurant_reservation"/>
</odoo>
