<odoo>
    <template id="restaurant_menu_page" name="Restaurant Menu">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h2 class="text-center">Our Menu</h2>
                <div class="row mt-4">
                    <t t-foreach="menus" t-as="dish">
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title"><t t-esc="dish.name"/></h5>
                                    <p class="card-text">Category: <t t-esc="dish.category"/></p>
                                    <p class="card-text">Price: ₹<t t-esc="dish.price"/></p>
                                    <a t-att-href="'/restaurant/order/%s' % dish.id" class="btn btn-primary">
                                        Order Now
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
    <template id="restaurant_order_confirm" name="Order Confirmation">
        <t t-call="website.layout">
            <div class="container mt-4 text-center">
                <h2>Thank you!</h2>
                <p>You ordered <strong><t t-esc="dish.name"/></strong> for ₹<t t-esc="dish.price"/>.</p>
                <p>Your order ID: <t t-esc="order.id"/></p>
                <a href="/restaurant/menu" class="btn btn-success">Back to Menu</a>
            </div>
        </t>
    </template>
</odoo>
