<odoo>
    <!-- Order Tree/List View -->
    <record id="view_restaurant_order_tree" model="ir.ui.view">
        <field name="name">rsm.order.tree</field>
        <field name="model">rsm.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="table_id"/>
                <field name="status"/>
                <field name="total_amount"/>
            </list>
        </field>
    </record>

    <!-- Order Form View -->
    <record id="view_restaurant_order_form" model="ir.ui.view">
        <field name="name">rsm.order.form</field>
        <field name="model">rsm.order</field>
        <field name="arch" type="xml">
            <form string="Restaurant Order">
                <header>
                    <button name="action_confirm" type="object" string="Confirm"  invisible="status!='draft'"/>
                    <button name="action_serve" type="object" string="Serve" invisible="status!='confirmed'"/>
                    <button name="action_paid" type="object" string="Paid"  invisible="status!='served'"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,served,paid"/>
                </header>
                <sheet>
                    <group>
                        <field name="table_id" required="1" readonly="status in ['confirmed','paid','served']"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids" readonly="status in ['confirmed','paid','served']">
                                <list editable="bottom">
                                    <field name="menu_id" required="1"/>
                                    <field name="quantity" required="1"/>
                                    <field name="price" readonly="1"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="total_amount" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_restaurant_order" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">rsm.order</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="restaurant_menu_order" name="Orders" parent="restaurant_root_menu" action="action_restaurant_order"/>
</odoo>
